{% extends 'base.html.twig' %}
{% block title %}Learn Vue 2: {{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="mt-3">
                    <h2><a href="{{ path('episode1_basic_data_binding') }}">Learn Vue 2: {{title}}</a></h2>
                    <div id="root">
                        <input type="text" id="input" v-model="message">
                        <p>The value of the input is: {{ "{{message}}" }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                {{ include('BootstrapBundle:Vue:_sidebar.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}
    {{ include('BootstrapBundle:Vue:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        new Vue ({
            el: '#root',
            data: {
                message: 'Hello World'
            }
            
        })
    </script>
{% endblock %}
