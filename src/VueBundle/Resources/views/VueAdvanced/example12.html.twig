                        &lt;option value=""&gt;wszyscy&lt;/option&gt;
                        &lt;option value="male"&gt;mężczyźni&lt;/option&gt;
                        &lt;option value="female"&gt;kobiety&lt;/option&gt;
                    &lt;/select&gt;
                &lt;/div&gt;
            &lt;/div&gt;
        &lt;/form&gt;
        &lt;div class="table-responsive"&gt;
