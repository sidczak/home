{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Example 29</h2>

                    <div id="app">
                        <h4>Użytkownicy</h4>
                        <div class="table-responsive">
	                        <table class="table table-striped table-hover">
	                        	<thead>
	                        		<tr>
		                        		<th>Lp.</th>
		                        		<th>Imię i nazwisko</th>
		                        		<th>Data urodzenia f1</th>
                                        <th>Data urodzenia f2</th>
	                        		</tr>
	                        	</thead>
	                        	<tbody>
	                        		<tr v-for="(user, index) in users">
	                        			<td>${ index + 1 }.</td>
	                        			<td>${ user.firstName } ${ user.lastName }</td>
	                        			<td>${ user.birthdate | date }</td>
                                        <td>${ user.birthdate | date('D-M-YYYY') }</td>
	                        		</tr>
	                        	</tbody>
	                        </table>
                    	</div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block javascriptsvue %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.23.0/moment.min.js"></script>
    {{ include('VueBundle:VueBasic:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        // Vue.filter("date", function(value) {
        //     return moment(value).format("D/M/YYYY");
        // });

        new Vue({
            el: "#app",
            delimiters: ['${', '}'],
            data: {
                users: [
	            	{firstName: "Jan", lastName: "Kowalski", birthdate: "1990-03-21T00:00:00.000Z"},
	            	{firstName: "Anna", lastName: "Nowak", birthdate: "1987-02-22T00:00:00.000Z"},
	            	{firstName: "Tomasz", lastName: "Zieliński", birthdate: "1974-12-02T00:00:00.000Z"},
	            	{firstName: "Katarzyna", lastName: "Tomczak", birthdate: "1979-06-13T00:00:00.000Z"},
	            	{firstName: "Mariusz", lastName: "Murawski", birthdate: "1981-10-22T00:00:00.000Z"}
                ]
            },
            filters: {
                date: function(value, format) {
                    return moment(value).format(format || "D/M/YYYY");
                }
            }
        });
    </script>
{% endblock %}