{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Example 14</h2>

                    <div id="app">
                        <h4>Formularz</h4>
                        <form action="#" @submit.prevent="submit">
                            <div class="form-group row">
                                <div class="col-2">
                                    <label class="form-label">Imię:</label>
                                </div>
                                <div class="col">
                                    <input class="form-control" type="text" placeholder="Podaj swoje imię">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label class="form-label">Nazwisko:</label>
                                </div>
                                <div class="col">
                                    <textarea class="form-control" placeholder="Wpisz wiadomość" rows="3"
                                    @keydown.shift.enter.prevent="submit"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <button class="btn btn-primary float-right" :disabled="sent" @click.exact="click">Wyślij</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block javascriptsvue %}
    {{ include('VueBundle:VueBasic:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        new Vue({
            el: "#app",
            data: {
                sent: false
            },
            methods: {
                submit: function() {
                    this.sent = true;
                },
                click: function() {
                    console.log("Czyste kliknięcie!");

                }
            }
        });

        // enter, tab, delete, esc, space, up, down, left, right

        // ctrl, alt, shift, meta 

    </script>
{% endblock %}