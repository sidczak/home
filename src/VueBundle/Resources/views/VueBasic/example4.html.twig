{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Example 3</h2>
                    <div id="app">
                        <h4>{{"{{ firstName + ' ' + lastName }}"}}</h4>
                        <p>{{"{{ 2 + 2 }}"}}</p>
                        <p>{{"{{ fullName() }}"}} - methods</p>
                        <p>{{"{{ fullNameComputed }}"}} - computed</p>
                        <p>{{"{{ age }}"}}</p>
                        <p>{{"{{ random() }}"}}</p>
                        <p>{{"{{ toUpperCase('Witaj Å›wiecie') }}"}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block javascriptsvue %}
    {{ include('VueBundle:VueBasic:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        new Vue({
            el: "#app",
            data: {
                firstName: "Jan",
                lastName: "Kowalski",
                age: 32
            },
            computed: {
                fullNameComputed: function() {
                    return this.firstName + " " + this.lastName;
                }
            },
            methods: {
                fullName: function() {
                    return this.firstName + " " + this.lastName;
                },
                random: function() {
                    return Math.random().toString(16).slice(2)
                },
                toUpperCase: function(value) {
                    return value.toUpperCase();
                }
            }
        });
    </script>
{% endblock %}