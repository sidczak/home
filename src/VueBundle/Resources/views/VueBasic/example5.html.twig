{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Example 5</h2>
                    <div id="app">
                        <h4>{{"{{ fullName }}"}}</h4>
                        <h4 v-text="fullName"></h4>
                        <h4 v-text="fullName + ' hello'"></h4>
                        <h4 v-text="embolden(fullName)"></h4>
                        <h4>{{"{{ embolden(fullName) }}"}}</h4>
                        <h4 v-html="embolden(fullName)"></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block javascriptsvue %}
    {{ include('VueBundle:VueBasic:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        new Vue({
            el: "#app",
            data: {
                firstName: "Jan",
                lastName: "Kowalski"
            },
            computed: {
                fullName: function() {
                    return this.firstName + " " + this.lastName;

                }
            },
            methods: {
                embolden: function(value) {
                    return "<strong>" + value + "</strong>";
                }
            }
        });
    </script>
{% endblock %}