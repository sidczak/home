{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Example 19</h2>

                    <div id="app">
                        <h4>Użytkownicy</h4>
                        <div class="table-responsive">
	                        <table class="table table-striped table-hover">
	                        	<thead>
	                        		<tr>
		                        		<th>Lp.</th>
		                        		<th>Imię i nazwisko</th>
		                        		<th>Wiek</th>
	                        		</tr>
	                        	</thead>
	                        	<tbody>
	                        		<tr v-for="(user, index) in users" :key="user.id">
	                        			<td>${ index + 1 }.</td>
	                        			<td>${ user.firstName } ${ user.lastName } <input type="checkbox"></td>
	                        			<td>${ user.age }</td>
	                        		</tr>
	                        	</tbody>
	                        </table>
                    	</div>
                        <button class="btn btn-primary float-right" @click="shuffle">Pomieszaj</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block javascriptsvue %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.11/lodash.min.js"></script>
    {{ include('VueBundle:VueBasic:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        new Vue({
            el: "#app",
            delimiters: ['${', '}'],
            data: {
                users: [
	            	{id: 1, firstName: "Jan", lastName: "Kowalski", age: 32},
	            	{id: 2, firstName: "Anna", lastName: "Nowak", age: 27},
	            	{id: 3, firstName: "Tomasz", lastName: "Zieliński", age: 40},
	            	{id: 4, firstName: "Katarzyna", lastName: "Tomczak", age: 34},
	            	{id: 5, firstName: "Mariusz", lastName: "Murawski", age: 21}
                ]
            },
            methods: {
                shuffle: function() {
                    this.users = _.shuffle(this.users);
                }
            }
        });
    </script>
{% endblock %}