{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Example 14</h2>

                    <div id="app">
                        <h4>Formularz</h4>
                        <form action="#" @submit.prevent="submit" :class="{'d-none': sent}">
                            <div class="form-group row">
                                <div class="col-2">
                                    <label class="form-label">Imię:</label>
                                </div>
                                <div class="col">
                                    <input class="form-control" type="text" placeholder="Podaj swoje imię">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label class="form-label">Nazwisko:</label>
                                </div>
                                <div class="col">
                                    <textarea class="form-control" placeholder="Wpisz wiadomość" rows="3"
                                    @keydown.shift.enter.prevent="submit"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <button class="btn btn-primary float-right" :class="{ 'loading': isSending }" :disabled="isSending || sent">Wyślij</button>
                                    <button class="btn btn-primary float-right" :class="buttonStyles" :disabled="isSending || sent">Wyślij</button>
                                </div>
                            </div>
                        </form>
                        <div class="alert alert-success" :class="{'d-none': !sent}">Twoja wiadomość została wysłana!</div>
                        <div class="alert alert-success alert-message" :class="[{'d-none': !sent}, messageClass]">Twoja wiadomość została wysłana!</div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block javascriptsvue %}
    {{ include('VueBundle:VueBasic:_vueScript.html.twig') }}
    {#<script src="{{ asset('js/vue/quick-start.vue.js') }}"></script>#}
    <script>
        new Vue({
            el: "#app",
            data: {
                sent: false,
                isSending: false,
                messageClass: ""
            },
            computed: {
                buttonStyles: function() {
                    return { 'loading': this.isSending };
                }
            },
            methods: {
                submit: function() {
                    this.isSending = true;

                    setTimeout(() => {
                        this.sent = true;
                    }, 2000);
                }
            }
        });
    </script>
{% endblock %}