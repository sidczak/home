{% extends 'base.html.twig' %}
{% block title %}Modal{% endblock %}

{% block body %}
    {#{{ show_source_code(_self) }}#}
        
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mt-3">
                    <h2>Modal</h2>
                </div>
                
                <!-- Large modal -->
                <button class="btn btn-primary" data-toggle="modal" data-target="#example-modal-large">Large modal</button>

                <div class="modal fade" id="example-modal-large" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><i class="fa fa-code"></i> Large modal</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                ...
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Default modal -->
                <button class="btn btn-primary" data-toggle="modal" data-target="#example-modal-large">Default modal</button>

                <div class="modal fade" id="example-modal-default" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><i class="fa fa-code"></i> Default modal</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                ...
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Small modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#example-modal-small">Small modal</button>

                <div class="modal fade" id="example-modal-small" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><i class="fa fa-code"></i> Small modal</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                ...
                            </div>
                        </div>
                    </div>
                </div>

                <hr/>

                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#example-modal-fade-scale">
                    <i class="fa fa-cogs"></i> Fade scale modal (center)
                </button>

                <div class="modal fade fade-scale" id="example-modal-fade-scale" tabindex="-1">
                    <div style="display: table; width: 100%; height: 100%;">
                        <div style="display: table-cell; vertical-align: middle; position: relative;">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title"><i class="fa fa-code"></i> Source code used to render this page</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="modal-body">
                                        ...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        <div>
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{# empty Twig template #}
